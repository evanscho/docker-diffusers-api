{
  "python.testing.pytestArgs": [
    "--cov=.",
    "--cov-report=xml",
    "--ignore=test.py",
    "--ignore=tests/integration",
    "--ignore=diffusers",
    // "unit_tests.py"
    // "."
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "runItOn": {
    "commands": [
        {
            "match": "\\.py$",
            "isAsync": true,
            "isShellCommand": false,
            "cmd": "testing.runAll"
        },
    ],
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
}
